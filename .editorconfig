root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# YAML requires indentation with spaces instead of tabs.
[*.{js,yml,yaml}]
indent_style = space
indent_size = 2

# Makefile requires tab indentation.
[Makefile]
indent_style = tab
indent_size = 4
